<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enesusta.instagramclone.view.activities.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/edit_profile_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/background_border">

        <EditText
            android:id="@+id/edit_profile_topbar_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:fontFamily="@font/architects_daughter"
            />

        <EditText
            android:text="Edit Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/architects_daughter"
            />

        <EditText
            android:id="@+id/edit_profile_topbar_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/architects_daughter"
            android:text="Done"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/edit_profile_topbar"
        android:id="@+id/edit_profile_photo_layout"
        android:layout_width="match_parent"
        android:background="@drawable/background_border"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="12dp"
            android:id="@+id/edit_profile_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/addusermale"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_below="@+id/edit_profile_photo"
            android:id="@+id/edit_profile_photo_change_text"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Change Profile Photo"
            android:fontFamily="@font/architects_daughter"
            android:background="@color/den"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/edit_profile_photo_layout"
        android:id="@+id/edit_profile_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_border"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/edit_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/edit_profile_name_edit"
                android:layout_marginLeft="37dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/edit_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/edit_profile_username_edit"
                android:layout_marginLeft="17dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            >
            <TextView
                android:id="@+id/edit_profile_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/edit_profile_website_edit"
                android:layout_marginLeft="21dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            >
            <TextView
                android:id="@+id/edit_profile_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/edit_profile_bio_edit"
                android:layout_marginLeft="61dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/edit_profile_name_layout"
        android:id="@+id/edit_profile_information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_border"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/edit_profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/edit_profile_email_edit"
                android:layout_marginLeft="41dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/edit_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/edit_profile_phone_edit"
                android:layout_marginLeft="35dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            >
            <TextView
                android:id="@+id/edit_profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="18sp"
                />

        </LinearLayout>



    </LinearLayout>









</RelativeLayout>