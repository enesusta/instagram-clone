<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <ImageView
        android:id="@+id/icon_group"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/group" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/icon_group"
        android:text="Egitim"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/groupName"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/icon_group"
        android:text="25 Dakika Once" />

    <TextView
        android:id="@+id/aciklama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon_group"
        android:layout_marginLeft="30dp"
        android:text="Harika bir cekim" />

    <ImageView
        android:id="@+id/paylasimResmi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/aciklama"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/cute" />


    <ImageView
        android:id="@+id/likeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/paylasimResmi"
        android:layout_marginLeft="15dp"
        android:background="@drawable/like" />


    <TextView
        android:id="@+id/likeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paylasimResmi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/likeButton"
        android:padding="5dp"
        android:text="Like"

        />


    <ImageView
        android:id="@+id/commentPic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/paylasimResmi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/likeText"
        android:background="@drawable/comment"
        android:padding="10dp" />

    <TextView
        android:id="@+id/commentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paylasimResmi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/commentPic"
        android:padding="5dp"
        android:text="Yorum yap"

        />

    <ImageView
        android:id="@+id/sharePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/paylasimResmi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/commentText"
        android:background="@drawable/share"

        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paylasimResmi"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/sharePic"
        android:padding="5dp"
        android:text="Paylas"
        />


</RelativeLayout>